
<ul>
	<% @contacts.each do |contact| %>
		<% if contact.favorite %>
			<li>
				<a href="/contacts/<%= contact.id %>"><%= contact.name %></a>
			</li>
		<% end %>
	<% end %>
</ul>

<p><a href="/add">Add a new contact</a></p>
<p><a href="/favorite_contacts"<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">>List of favorite contacts</a></p>